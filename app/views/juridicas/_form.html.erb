  <% @juridica.errors.full_messages.each do |message| %>
    <li class="alert alert-danger" role="alert"><%= message %></li>
   <% end %> 

<%= form_for @juridica, html:{multipart:true} do |form| %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form.label :cnpj, "CNPJ" %>
      <%= form.text_field :cnpj, class: "form-control", placeholder: "Digite o CNPJ" %>
    </div>
  </div> 

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form.label :razao, "Razão Social" %>
      <%= form.text_field :razao, class: "form-control", placeholder: "Digite a Razão Social " %>
    </div>
  </div> 

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form.label :fantasia, "Nome Fantasia" %>
      <%= form.text_field :fantasia, class: "form-control", placeholder: "Digite o Nome Fantasia" %>
    </div>
  </div> 

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form.label :telefone, "Telefone" %>
      <%= form.text_field :telefone, class: "form-control", placeholder: "Digite seu telefone" %>
    </div>
  </div> 

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form.label :endereco, "Endereço" %>
      <%= form.text_field :endereco, class: "form-control", placeholder: "Digite o endereço" %>
    </div>
  </div> 

  <div class="botao_texto_da_acao">
    <%= form.submit texto_da_acao, class: "btn btn-success" %>
  </div>
<% end %>
