<p id="notice"><%= notice %></p>

<h1>Pessoas Jurídicas</h1>

<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th>Cnpj</th>
      <th>Razao</th>
      <th>Fantasia</th>
      <th>Telefone</th>
      <th class="botoes_index" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @juridicas.each do |juridica| %>
      <tr>
        <td><%= juridica.cnpj %></td>
        <td><%= juridica.razao %></td>
        <td><%= juridica.fantasia %></td>
        <td><%= juridica.telefone%></td>
        <td><%= link_to 'Abrir', juridica, class: "btn btn-view botoes_juridicas" %></td>
        <td><%= link_to 'Editar', edit_juridica_path(juridica), class: "btn btn-edit botoes_juridicas" %></td>
        <td><%= link_to 'Deletar', juridica, method: :delete, data: { confirm: "Você tem certeza que deseja deletar #{juridica.fantasia} do banco de dados ?" }, class: "btn btn-delete botoes_juridicas" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar Pessoa Jurídica', new_juridica_path, class: "btn btn-view botoes_juridicas" %>
